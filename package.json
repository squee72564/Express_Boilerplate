{
  "name": "express_template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "pretty": "npx prettier ./src --write",
    "lint": "npx eslint ./src --fix",
    "start": "NODE_ENV=production node dist/server.js",
    "start:dev": "NODE_ENV=development nodemon --watch src --ext ts --exec tsx src/server.ts",
    "start:pm2": "NODE_ENV=production pm2 start dist/server.js --name express-backend",
    "restart:pm2": "NODE_ENV=production pm2 restart express-backend",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.1",
    "pm2": "^6.0.13",
    "winston": "^3.18.3",
    "xss-filters": "^1.2.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/http-errors": "^2.0.5",
    "@types/node": "^24.7.0",
    "@types/xss-filters": "^1.2.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^8.0.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  }
}
